<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageUsers"
    android:orientation="vertical"
    android:background="@drawable/box_6"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User's Management"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center_vertical"
        android:fontFamily="@font/timesbd"
        android:drawableRight="@drawable/support"
        android:padding="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">
                <Button
                    android:id="@+id/ad_update"
                    android:layout_marginHorizontal="5dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Update"
                    android:fontFamily="@font/masque"
                    android:drawableLeft="@drawable/ic_baseline_edit_note_24"
                    android:textSize="18sp"
                    android:textColor="#303F9F"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/box_3"
                    android:textAlignment="center"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">
                <Button
                    android:id="@+id/ad_del"
                    android:layout_marginHorizontal="5dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Delete"
                    android:fontFamily="@font/masque"
                    android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
                    android:textSize="18sp"
                    android:textColor="#303F9F"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/box_3"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>