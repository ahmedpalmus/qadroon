<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyReg"
    android:background="@drawable/box_2"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue"
        android:drawableRight="@drawable/company"
        android:fontFamily="@font/aleo"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/register"
        android:textColor="#fff"
        android:textSize="25dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"

                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"

                />
            <TextView
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/conform_pasword"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_pass2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pername"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"

                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"

                />
            <TextView
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:paddingHorizontal="5dp"
                android:textColor="@color/black"

                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"

                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"

                />
            <EditText
                android:background="@drawable/box_3"
                android:id="@+id/reg_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Industry"
                    android:padding="10dp"
                    android:textColor="#020F55"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="@drawable/box_3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    >
                    <Spinner
                        android:id="@+id/comp_type"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:entries="@array/types"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fm_image_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/box_4"
                    android:padding="10dp"
                    android:text="Attach Logo"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>
            <ImageView
                android:padding="10dp"
                android:id="@+id/fm_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/company"
                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/reg_reg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:background="@drawable/box_7"
                    android:layout_marginHorizontal="10dp"/>
                <Button
                    android:id="@+id/reg_cancel"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:background="@drawable/box_5"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>