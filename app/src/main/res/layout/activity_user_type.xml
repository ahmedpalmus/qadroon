<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserType"
    android:orientation="vertical"
    android:background="@drawable/box_6"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User's Management"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center_vertical"
        android:fontFamily="@font/timesbd"
        android:drawableRight="@drawable/support"
        android:padding="10dp"/>
    <Button
        android:id="@+id/provs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_3"
        android:drawableLeft="@drawable/support"
        android:elevation="5px"
        android:padding="25dp"
        android:text="Provide Support"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/box_3"
        android:drawableLeft="@drawable/user"
        android:elevation="5px"
        android:padding="25dp"
        android:text="User"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/comps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:padding="25dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="40dp"
        android:drawableLeft="@drawable/company"
        android:background="@drawable/box_3"/>

</LinearLayout>