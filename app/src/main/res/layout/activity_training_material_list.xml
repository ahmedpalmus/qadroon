<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingMaterialList"
    android:orientation="vertical"
    android:background="@drawable/box_6"
    android:padding="5dp"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Material"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center_vertical"
        android:fontFamily="@font/timesbd"
        android:drawableRight="@drawable/train"
        android:padding="10dp"/>
    <Button
        android:id="@+id/new_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:text="New"
        android:background="@drawable/gradient_light"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/add"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:textColor="#191213"
        />
    <ListView
        android:id="@+id/memo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>