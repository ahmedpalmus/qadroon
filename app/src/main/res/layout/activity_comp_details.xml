<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompDetails"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support Details"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center_vertical"
        android:fontFamily="@font/timesbd"
        android:drawableRight="@drawable/support"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/s_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="25/07/2022"
        android:textColor="#555252"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDF6F5F5"
        android:elevation="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/s_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="By: username"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/s_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Details"
        android:textSize="17dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/req_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_light"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Response"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/s_resp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:lines="4"
            android:hint="No response yet"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linear17"
        android:paddingVertical="10dp">

        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/box_4"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:text="Send"/>
        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_5"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>