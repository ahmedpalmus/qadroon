<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserType"
    android:orientation="vertical"
    android:background="@drawable/box_6"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Requests"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center_vertical"
        android:fontFamily="@font/timesbd"
        android:drawableRight="@drawable/support"
        android:padding="10dp"/>

    <Button
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/box_3"
        android:drawableLeft="@drawable/job"
        android:elevation="5px"
        android:padding="25dp"
        android:text="Job Requests"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Requests"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:padding="25dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/train"
        android:background="@drawable/box_3"/>

</LinearLayout>